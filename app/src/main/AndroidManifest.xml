<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oishi.medicinetime">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="com.oishi.medicinetime.splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.oishi.medicinetime.scroll" />
        <activity android:name="com.oishi.medicinetime.Register" />
        <activity android:name="com.oishi.medicinetime.Login" />
        <activity android:name="com.oishi.medicinetime.MainActivity" />
        <activity android:name="com.oishi.medicinetime.medicine.MedicineActivity">

        </activity> <!-- <activity android:name=".MainActivity" /> -->
        <activity android:name="com.oishi.medicinetime.addmedicine.AddMedicineActivity" />
        <activity android:name="com.oishi.medicinetime.alarm.ReminderActivity" />
        <activity android:name="com.oishi.medicinetime.report.MonthlyReportActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>